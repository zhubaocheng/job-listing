<div class="col-md-12">
  <div class="row facepanel">
      <div class="col-md-4 col-md-offset-4 sign-up-page">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2 class="text-center">登录</h2>
          <div class="form-inputs">
            <%= f.input :email, label: '邮箱', error: '请输入邮箱', required: true, autofocus: true %>
            <%= f.input :username, label: '用户名', required: true%>
            <%= f.input :password, label: '密码', error: '请输入密码', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "登录", class: "btn btn-primary btn-block" %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>

      </div>
  </div>
</div>
