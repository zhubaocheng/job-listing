<% if @jobs.blank?%>
  <div class="col-md-12">
    <div class="search-error">
      <h2>暂时没有符合该搜索条件的职位</h2>
      <br/>
      <h5>请重新修改搜索条件后再进行搜索</h5>
      <br/>
      <p><%= link_to("立即查看工作", jobs_path, class: "btn btn-lg btn-success") %></p>
    </div>
  </div>
<% else %>
  <!--=== 搜索结果，有符合条件的数据 ===-->
   <!--=== 搜索结果文字 ===-->
  <div class="col-md-10 col-md-offset-1 page-title">
    <h1><sapn class="fa fa-search"></sapn> 搜索结果</h1>
  </div>
  <!--=== 搜索结果内容 ===-->
  <div class="col-md-10 col-md-offset-1 job-content">
    <!--=== 左侧区块 ===-->
    <div class="row">
      <% @jobs.each do |job| %>
        <div class="col-md-9 col-xs-12 job-box">
          <!--=== 职位信息 ===-->
          <div class="col-md-6 col-xs-12 info">
            <div class="info-top">
              <h3><%= link_to(job.title, job_path(job), target: "_blank" )%></h3>
              <span><%= job.created_at.strftime("%Y-%m-%d") %></span>
            </div>
            <!-- <div class="info-mid">
              <%= job.wage_lower_bound %> k ~ <%= job.wage_upper_bound %> k
            </div> -->
          </div>
          <!--=== 公司信息 ===-->
          <div class="col-md-6 col-xs-12 company">
            <div class="company-top">
              <span><%= link_to(job.company, job_path(job))%></span>
            </div>
            <div class="company-mid">
              <sapn class="fa fa-envelope"></sapn><span><%= job.contact_email %></span>
            </div>
            <div class="company-bot">
              <sapn class="fa fa-map-marker"></sapn><span><%= job.city %></span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
