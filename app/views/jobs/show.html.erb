<div class="col-md-12">
  <br>
  <div class="group">
    <% if current_user && current_user.admin?%>
      <%= link_to("编辑职位", edit_job_path(@job), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @job.title %></h2>
  <p>
    <%= simple_format(@job.description)%>
  </p>

  <div class="text-center">
    <%= link_to("投个简历", new_job_resume_path(@job), :style => "font-size: 30px; text-decoration:underline;") %>
  </div>

</div>
