<h2>新增职位</h2>
<%= simple_form_for @job do |f| %>
  <div class="form-group">
    <%= f.input :title, :label => "职位名称", input_html: { class: "form-control"}%>
    <%= f.input :description, :label => "职位要求", input_html: { class: "form-control"}%>
    <%= f.input :wage_lower_bound, :label => "薪资下限"%>
    <%= f.input :wage_upper_bound, label: "薪资上限"%>
    <%= f.input :contact_email, label: "电子邮箱"%>
    <%= f.input :is_hidden, :label => "隐藏"%>
  </div>
  <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submiting..."}%>
<% end %>
